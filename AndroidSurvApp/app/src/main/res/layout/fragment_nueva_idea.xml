<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NuevaIdeaFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/fragment_new_idea">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_send_new_idea"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/new_idea"
                    android:gravity="center"
                    android:layout_toRightOf="@id/back_send_new_idea"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    android:textStyle="bold"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/new_idea_title"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/title"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/title"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="32"
                            />

                        <TextView
                            android:id="@+id/new_idea_description"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/email"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_description"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="@string/description"
                            android:gravity="top|left"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="128"
                            />

                        <TextView
                            android:id="@+id/new_idea_theme"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/theme"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <Spinner
                            android:id="@+id/new_idea_spinner_theme"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/new_idea_answer_1"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/answer_1"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_answer_1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/answer_1"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="32"
                            />

                        <TextView
                            android:id="@+id/new_idea_answer_2"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/answer_2"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_answer_2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/answer_2"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="32"
                            />

                        <TextView
                            android:id="@+id/new_idea_answer_3"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/answer_3"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_answer_3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/answer_3"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="32"
                            />

                        <TextView
                            android:id="@+id/new_idea_answer_4"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:text="@string/answer_4"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:gravity="bottom"
                            />

                        <EditText
                            android:id="@+id/et_new_idea_answer_4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/answer_4"
                            android:background="@drawable/et_border"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:maxLength="32"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"/>
                    </LinearLayout>
                </ScrollView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_send_new_idea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/send"/>

            </RelativeLayout>
        </LinearLayout>
</FrameLayout>