<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EstadisticaIdeaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragment_stat_idea">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_send_stat_idea"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/stat_idea"
                android:gravity="center"
                android:layout_toRightOf="@id/back_send_stat_idea"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idea_title_stat"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/title"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"/>

                    <TextView
                        android:id="@+id/idea_description_stat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/description"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:textSize="24sp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:text="@string/answer_1"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"/>

                    <TextView
                        android:id="@+id/idea_answer_1_stat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:text="--"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Votos: "
                            />
                        <TextView
                            android:id="@+id/vote_1_stat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="18sp"
                            android:text="0"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:textSize="24sp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:text="@string/answer_2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"/>

                    <TextView
                        android:id="@+id/idea_answer_2_stat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:text="--"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Votos: "
                            />
                        <TextView
                            android:id="@+id/vote_2_stat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="18sp"
                            android:text="0"
                            />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/idea_answer_3_stat_title"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:textSize="24sp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:text="@string/answer_3"
                        android:visibility="gone"/>

                    <View

                        android:id="@+id/idea_answer_3_stat_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/idea_answer_3_stat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:visibility="gone"
                        android:text="--"/>

                    <LinearLayout
                        android:id="@+id/idea_answer_3_stat_votes"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="24dp"
                        android:visibility="gone"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Votos: "
                            />
                        <TextView
                            android:id="@+id/vote_3_stat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="18sp"
                            android:text="0"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/idea_answer_4_stat_title"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:textSize="24sp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:visibility="gone"
                        android:text="@string/answer_4"/>

                    <View
                        android:id="@+id/idea_answer_4_stat_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="24dp"
                        android:visibility="gone"
                        android:layout_marginRight="24dp"/>

                    <TextView
                        android:id="@+id/idea_answer_4_stat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:visibility="gone"
                        android:text="--"/>

                    <LinearLayout
                        android:id="@+id/idea_answer_4_stat_votes"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Votos: "
                            />
                        <TextView
                            android:id="@+id/vote_4_stat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textSize="18sp"
                            android:text="0"
                            />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>